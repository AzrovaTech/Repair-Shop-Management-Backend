@{
    ViewData["Title"] = "افزودن کاربر";
}

<div class="users-container">
    <div class="add-container">
        <a asp-controller="User" asp-action="Index">
            بازگشت به کاربران
            <i class="fa-solid fa-right-to-bracket"></i>
        </a>
        <div class="form-container">
            <form action="">
                <div class="input-box">
                    <input type="text" placeholder="نام و نام خانوادگی مشتری">
                </div>
                <div class="input-box">
                    <input type="tel" placeholder="شماره تلفن همراه مشتری">
                </div>
                <div class="input-box">
                    <input type="tel" placeholder="کد ملی مشتری">
                </div>
                <div class="submit-box">
                    <button type="submit">افزودن مشتری جدید</button>
                </div>
            </form>
        </div>
    </div>
</div>